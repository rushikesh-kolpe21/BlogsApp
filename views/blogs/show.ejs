<% layout('/layouts/boilerplate') -%>

<div class="container mt-4">
  <div class="row">
    <!-- Single Large Card for the Blog -->
    <div class="col-md-12">
      <div class="card h-100 shadow-sm border ">
        <div class="card-body">
          <!-- Title with a Sticker -->
          <h5 class="card-title d-flex justify-content-between align-items-center">
            <span><%= newId.title %></span> 
           
            <a href="/blogs/<%= newId.id %>/edit" class="btn btn-outline-warning btn-sm">‚úèÔ∏è Edit</a> <!-- Edit Button --> <!-- Sticker/Label -->
          </h5>
          
          <!-- Content with Read More -->
          <p class="card-text text-muted text-truncate" style="max-height: 6rem;">
            <%= newId.content %>
          </p>
          
          <!-- Buttons: Edit and Read More -->
          <div class="d-flex justify-content-between">
            <!-- Edit Link -->
            <!-- <a href="/blogs/<%= newId.id %>/edit" class="btn btn-outline-warning btn-sm">‚úèÔ∏è Edit</a> Edit Button -->
            
            <!-- Read More Link -->
            <!-- <a href="/blogs/<%= newId.id %>" class="btn btn-outline-primary btn-sm">üîó Read More</a> Read More Button -->
          </div>
        </div>
        
        <!-- Author and Footer Section -->
        <div class="card-footer text-muted">
          <small>Author: <%= newId.author %></small>
          <p class="text-end"> USER: <%= newId.owner.username %></p>
          <p class="text-end"> üìß <%= newId.owner.email %></p>
        
         
        </div>
        
      </div>
    </div>
    
    <!-- Delete Form -->
    <form action="/blogs/<%= newId.id %>?_method=DELETE" method="post">
      <button class="btn btn-danger mt-2">Delete Blog</button> <!-- Delete Button -->
    </form>
  </div>

<!-- Comment Section Form -->
<form action="/blogs/<%= newId.id %>/comments" method="POST">
  <div class="card">
    <div class="card-header">
      <h5>Comment Section</h5>
    </div>
    <div class="card-body">
      <textarea
        name="comment[content]"
        class="form-control mb-3"
        rows="3"
        placeholder="Write your comment here..."
        required
      ></textarea>
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Done</button>
      </div>
    </div>

    <!-- Display Comments -->
    <div class="card-footer">
      <h6>All Comments:</h6>
      <% let index = 0; %>
      <% for (let comment of newId.comments) { %>
        <div class="card mb-2">
          <div class="card-body">
            <p><strong>Comment <%= index + 1 %>:</strong></p>
            
            <% if (comment.audiance) { %>
              <p>
                <strong>By:</strong> <%= comment.audiance.username %> 
                
                (<%= comment.audiance.email %>)
              </p>
            <% } else { %>
              <p><strong>By:</strong> Guest User</p>
            <% } %>

            <p><%= comment.content %></p>
          </div>
        </div>
        <% index++; %>
      <% } %>
    </div>
  </div>
</form>

</div>
